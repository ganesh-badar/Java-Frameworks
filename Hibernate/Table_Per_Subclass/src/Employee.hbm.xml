<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="mypack.Employee" table="empinh1">
<id name="empid">
<generator class="increment"></generator>
</id>
<property name="ename"></property>

<joined-subclass name="mypack.Regular_Employee" table="regempinh1">
<key column="empid"></key>
<property name="salary"></property>
<property name="bonus"></property>
</joined-subclass>

<joined-subclass name="mypack.Contract_Employee" table="contempinh1">
<key column="empid"></key>
<property name="contract_duration"></property>
<property name="rate_per_hour"></property> 
</joined-subclass>
</class>
</hibernate-mapping>