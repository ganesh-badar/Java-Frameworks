<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
	<hibernate-mapping>
	<class name="mypack.Employee" table ="myemp1">
	<id name="id"><generator class="increment"></generator> </id>
	<property name="salary"></property>
	<property name="ename"></property>
	</class>
	<class name="mypack.Department" table="mydept1">
<id name="id">
<generator class="increment"></generator>
</id>
<property name="dname"></property>

<list name="emp" cascade="all">
<key column="did"></key>
<index column="type1"></index>
<one-to-many class="mypack.Employee"/>
</list>
</class>

	
	</hibernate-mapping>